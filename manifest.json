{
  "manifest_version": 3,

  "name": "[de]markierung",
  "description": "Word and phrase analyses for news",
  "version": "0.1.1",
  "icons": { "128": "res/icon_128.png" },

  "content_scripts": [
    {
      "matches": [
        "http://127.0.0.1:5500/*"
      ],
      "js": ["src/content.js"]
    }
  ],

  "background": {
    "service_worker": "src/background.js"
  },

  "permissions": ["activeTab", "contextMenus"]
}
